[DEFAULT]
bantime  = 3600
maxretry = 10 
destemail = root@{{ domain }}
sender = fail2ban
#action = %(action_mwl)s
ignoreip = {{ fail2ban_ignoreip }}

[dovecot]
enabled = true
logpath = /var/log/dovecot-info.log

[roundcube-auth]
enabled  = true
logpath  = {{ mail_log_dir }}/mail.log

[postfix-sasl]
enabled = true
port     = smtp,ssmtp,submission
filter   = postfix-sasl
logpath  = {{ mail_log_dir }}/mail.log

